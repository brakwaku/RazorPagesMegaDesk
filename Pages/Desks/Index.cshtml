@page
@model RazorPagesMegaDesk.Pages.Desks.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Desk[0].Width)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Desk[0].Depth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Desk[0].NumberOfDrawers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Desk[0].SurfaceMaterial)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Desk) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Width)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Depth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfDrawers)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SurfaceMaterial.DesktopMaterialId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.DeskId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.DeskId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.DeskId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
